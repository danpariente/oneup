%table.records
  %thead
    %tr
      %th ID
      %th Job title            
      %th Status
      %th Modified Date
  - @user.jobs.each do |job|
    %tr
      %td= "JD#{job.id}"
      %td{colspan:'3'}= link_to job.job_title, job    
    - job.applications.each do |app|
      %tr
        %td= "AP#{app.id}"
        %td= link_to app.user.username, user_application_path(@user.username, app)
        %td= app.status 
        %td.date= app.updated_at.strftime("%b %e, %y, %l:%M %p")