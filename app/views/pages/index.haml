
.span-24.first
  .span-3.first    
    = render '/home/links', user: @user    
  .span-20.last
    %hr.space
    .span-11
      %div.icons.icons_pages    
      %strong{:style => 'vertical-align:bottom;font-size:18px;'} Pages
    .span-8.last.right
      = link_to  "New Page", (@pageable.nil? ? new_page_path : "/events/#{@pageable.id}/pages/new"), class: 'btn btn-mini'
    
    .span-20.first      
      %hr.space
      - if @user.pages.empty?
        .title_medium.no_contacts
          You don't have any pages yet.
          %br
          %br
          = link_to  "Create One.", (@pageable.nil? ? new_page_path : "/events/#{@pageable.id}/pages/new")
          
      - for page in @pages 
        .span-11
          %a{:href => "/pages/#{page.id}" } #{page.title}
          .quiet Date created : #{page.created_at.strftime "%I:%M %p, %d %b %Y"}
        .span-8.last.right
          = link_to 'delete', page_url(page), :method => :delete, :confirm => 'Are you sure you wish to delete this page?'
          = link_to "edit", edit_page_url(page) 
        %hr.space
        %hr
     