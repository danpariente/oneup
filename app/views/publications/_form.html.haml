= form_for ([@profile, @profile.publications.build]) do |f|
  %h3 Add Publication
  .span-4.append-1
    = f.label "Publication Type"  
    = f.select :publication_type, ["Thesis", "Book", "Article"], :prompt => "Type:"  

  .span-4.prepend-1
    = f.label "Title"  
    = f.text_field :title, :size => 20
  %hr.space
  .span-10
    = f.label "Publication Date"  
    = f.text_field :publication_date, id: 'resume_datepicker'
  %hr.space
  .span-10
    = f.label "Website"  
    = f.url_field :website, :size => 20
  .span-10
    = f.label "Description"  
    = f.text_area :description, :cols => 55, :rows => 2
  %hr.space
  = f.hidden_field :profile_id, :value => @profile.id
  .span-10
    = f.submit 'Add Publication', class: 'btn'
   
