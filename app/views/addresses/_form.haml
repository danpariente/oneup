= form_for ([@profile, @profile.addresses.build]) do |f|
  %h3 Add Address  
  %hr.space
  .span-5
    Address Type
  %br
  .span-18
    = f.select :address_type, ["Residential", "Overseas"], :prompt => "Address:"
  %hr.space
  .span-5
    Address
  %br
  .span-18.last
    = f.text_field :address, :cols => 55, :rows => 2
  %hr.space
  = f.hidden_field :profile_id, :value => @profile.id
  .span-2
    = f.submit 'Add Address', class: 'btn'
   
