
<div class="modal_container">
  <div class="inner">

<% title "Sign up" %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validation => true) do |f| %>
  <%= devise_error_messages! %>
  <h2>Account</h2> 
  <div><%= f.label :first_name %>
  <%= f.text_field :first_name, class: 'span-9' %></div>

  <div><%= f.label :last_name %>
  <%= f.text_field :last_name, class: 'span-9' %></div><br />

  <div><%= f.label :username %>
  <%= f.text_field :username, class: 'span-9' %></div><br />

  <div><%= f.label :email %>
  <%= f.email_field :email, class: 'span-9' %></div><br />

  <div><%= f.label :password %>
  <%= f.password_field :password, class: 'span-9' %></div><br />

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'span-9' %></div><br />
  
  <div><%= f.label :role %>
  <%= f.collection_select :role, User::ROLES, :to_s, :humanize, {:include_blank => true}, class: 'span-9', id: 'role_box' %></p>
  
  <div id="company_form"> 
  <h2>How may we contact you</h2> 
  
  <div><%= f.label :mobile_number %>
  <%= f.text_field :mobile_number, class: 'span-9' %></div><br />

  <div><%= f.label :work_number %>
  <%= f.text_field :work_number, class: 'span-9' %></div><br />

  <h2>Company</h2>
  <div><%= f.label :company_name %>
  <%= f.text_field :company_name, class: 'span-9' %></div><br />

  <div><%= f.label :industry %>
  <%= f.collection_select :industry, User::INDUSTRIES, :to_s, :humanize, {:include_blank => false}, class: 'span-9', id: 'industry_box' %></p>
  </div>
  </div>
  <div><%= f.submit "Sign up", class: 'btn' %></div><br />
<% end %>

<%= render :partial => "devise/shared/links" %>

  </div>
</div>