= form_for ([@profile, @profile.experiences.build]) do |f|
  %h3 Company
  .span-4.append-1
    = f.label "Company name"   
    = f.text_field :company_name, :size => 20  
  .span-4.prepend-1
    = f.label "Country"  
    = f.select :country, ["Bolivia", "Chile", "Argentina"], :prompt => "Country:"
  %hr.space
  .span-10
    = f.label "Industry"  
    = f.select :industry, ["Accounting", "Sofware", "Security"], :prompt => "Industry:"
  %hr.space
  %h3 Hiring period
  .span-4.append-1
    = f.label "From"  
    = f.text_field :hired_from, id: 'resume_datepicker'  
  .span-4.prepend-1
    = f.label "To"  
    = f.text_field :hired_to, id: 'resume_datepicker_to'
  %hr.space
  %h3 Position
  .span-10
    = f.label "Job title"   
    = f.text_field :job_title, :size => 30
  %hr.space
  
  .span-10
    = f.label "Responsability"  
    = f.text_area :responsability, :cols => 55, :rows => 2
  %hr.space
  .span-10
    = f.label "Reason for leaving"  
    = f.text_area :reason_leaving, :cols => 55, :rows => 2
  %hr.space
  %h3 Compensation
  .span-10
    = f.label "Salary"  
    $
    = f.text_field :salary, :size => 20
  %hr.space
  %h3 Others
  .span-10
    = f.label "Additional notes"  
    = f.text_area :add_notes, :cols => 55, :rows => 2
  %hr.space  
  = f.hidden_field :profile_id, :value => @profile.id
  .span-10
    = f.submit 'add', class: 'btn'
   
