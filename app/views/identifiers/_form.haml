= form_for ([@profile, @profile.identifiers.build]) do |f|
  
  %h3 Add Legal Identifier
  %hr.space
  .span-5
    ID Type
  %br
  .span-18
    = f.select :id_type, ["Driving License", "Foreign ID", "National ID","Passport", "SSN", "Visa"], :prompt => "ID Type:"
  %hr.space
  .span-5
    Identifier
  %br
  .span-18.last
    = f.text_field :identifier, :cols => 55, :rows => 2
  %hr.space
  = f.hidden_field :profile_id, :value => @profile.id
  .span-2.prepend-6
    = f.submit 'Add Identifier', class: 'btn'