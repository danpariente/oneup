= form_for ([@profile, @profile.messengers.build]) do |f|
  %h3 Instant Messengers
  %hr.space
  .span-5
    ID Type
  %br
  .span-18
    = f.select :im_type, ["LinkedIn", "Skype", "MSN","Yahoo"], :prompt => "ID Type:"
  %hr.space
  .span-5
    Account Name
  %br
  .span-18.last
    = f.text_field :account_name, :cols => 55, :rows => 2
  %hr.space
  = f.hidden_field :profile_id, :value => @profile.id
  .span-2
    = f.submit 'Add IM', class: 'btn'