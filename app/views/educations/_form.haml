= form_for ([@profile, @profile.educations.build]) do |f|
  
  .span-10
    = f.label "Country"  
    = f.select :country, ["Bolivia", "Chile", "Argentina"], :prompt => "Country:"
  %hr.space 

  .span-4.append-1
    = f.label "Education level"  
    = f.select :education_level, ["Doctorate(PhD)", "Master's Degree", "College", "HighSchool", "Others"], :prompt => "Select Education Level:"
  .span-4.prepend-1
    = f.label "Field of study"    
    = f.text_field :field_of_study, :size => 20
  %hr.space

  .span-10
    = f.label "Intitution"  
    = f.text_field :institution, :size => 20
  
  %hr.space
  
  .span-4.append-1
    = f.label "Attended from"    
    = f.text_field :attended_from, id: 'resume_datepicker'
  
  .span-4.prepend-1
    = f.label "Attended to"        
    = f.text_field :attended_to, id: 'resume_datepicker_to'
  %hr.space
  
  
  .span-10
    = f.label "Additional notes"  
    = f.text_area :add_notes, :cols => 55, :rows => 2
  %hr.space
  = f.hidden_field :profile_id, :value => @profile.id
  .span-10
    = f.submit 'Add Education', class: 'btn'
   
